<%include ../partials/header%>

<%if(error&&error.length>0){%>
	<div class="ui main text container">
    		<div class="ui red floating message">
        		<p><%=error%></p>
    		</div>
		</div>
		<%}%>
     <%if(success&&success.length>0){%>
    	<div class="ui main text container">
    		<div class="ui green floating message">
        		<p><%=success%></p>
    		</div>
    	</div>
    <%}%>

<div class="ui main text container segment">
    <div class="ui huge header">Edit <%=blog.title%></div>
    <form class="ui form" action="/blogs/<%=blog._id%>?_method=PUT" method="POST">
				<div class="field">
					<label>Title</label>
					<input type="text" required name="blog[title]" value="<%=blog.title%>" placeholder="Title"></input>
					
				</div>
				<div class="field">
					<label>Image</label>
					<input type="text" name="blog[image]" value="<%=blog.image%>" placeholder="URL"></input>
				</div>
				<div class="field">
					<label>Blog Content</label>
					<textarea name="blog[body]" required placeholder="Your content goes here..."><%=blog.body%></textarea>
				</div>
				<button class="ui violet big basic button">Update</button>
    </form>
</div>
<%include ../partials/footer%>
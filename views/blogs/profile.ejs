<%include ../partials/header%>

<%if(error&&error.length>0){%>
	<div class="ui main text container">
    		<div class="ui red floating message">
        		<p><%=error%></p>
    		</div>
		</div>
		<%}%>
     <%if(success&&success.length>0){%>
    	<div class="ui main text container">
    		<div class="ui green floating message">
        		<p><%=success%></p>
    		</div>
    	</div>
    <%}%>
</div>
<div class="ui main text container">
	<div class="ui huge header"><%=User.username%></div>
	<div class="ui container">
		<p><em>Number of Blogs : <%=User.blog.length%><em></p>
	</div>
	<div class="ui top attached segment">
		<div class="ui divided items">
			<%User.blog.forEach(function(blog){%>
			<div class="item">
				<div class="image">
					<img src="<%=blog.image%>">
				</div>
				
				<div class="content">
					<a class="header" href="/blogs/<%=blog._id%>"><%=blog.title%></a>
					<div class="meta"><span><%=blog.created.toDateString()%></span></div>
					<div class="description">
						<p><%-blog.body.substring(0,80)%></p>
					</div>
					<div class="extra">
						<a class="ui floated basic violet button" href="/blogs/<%=blog._id%>">Read More<i class="right chevron icon"></i></i></a>
					</div>
				</div>
			</div>
			<% });%>
		</div>
	</div>
</div>

<%include ../partials/footer%>
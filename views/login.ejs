<%include ./partials/header%>
	<%if(error&&error.length>0){%>
	<div class="ui main text container">
    		<div class="ui red floating message">
        		<p><%=error%></p>
    		</div>
		</div>
		<%}%>
     <%if(success&&success.length>0){%>
    	<div class="ui main text container">
    		<div class="ui green floating message">
        		<p><%=success%></p>
    		</div>
    	</div>
    <%}%>

<div class="ui main text container segment">
	<div class="ui huge header">Login</div>
	<form class="ui form" action="/login" method="POST">
		<div class="field">
			<label>Username</label>
			<input type="text" required name="username" placeholder="Username"></input>
		</div>
		<div class="field">
			<label>Password</label>
			<input type="password" required name="password" placeholder="Password"></input>
		</div>
		<button class="ui violet big basic button">Submit</button>
	</form>
</div>
<%include ./partials/footer%>